<p id="notice"><%= notice %></p>

<% cache @post do%>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<!-- render comments -->
<%= render partial: 'comment', object: @post.comments %>

<% end %>



<br><br>
<%= link_to "Add Comment", new_comment_path(post_id:@post.id) %> <br>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
